---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
}

const { eyebrow, title, description } = Astro.props;
---

<div class="space-y-5">
  {eyebrow && (
    <p class="text-xs uppercase tracking-[0.35em] text-[color:var(--sec-500)]">
      {eyebrow}
    </p>
  )}
  <div>
    <h2 class="font-display text-4xl font-semibold tracking-tight text-[color:var(--text-1)] sm:text-[2.625rem]">
      {title}
    </h2>
    <div class="section-header__arc mt-4 h-[2px] w-24 rounded-full bg-[linear-gradient(90deg,var(--pri-500),var(--sec-500))]"></div>
  </div>
  {description && <p class="max-w-xl text-sm text-[color:var(--text-2)]">{description}</p>}
</div>
