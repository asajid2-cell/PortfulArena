---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import { CareerTimeline } from '../components/about/CareerTimeline.tsx';

const timeline = [
  {
    id: 'current',
    title: 'Independent Product Engineer',
    role: 'Freelance / Hybrid',
    period: '2022 - Now',
    description:
      'Shipping tactile web apps and prototypes for startups and design studios. Highlights include real-time collaboration tools, physics-inspired landing pages, and AI-assisted workflows.',
    technologies: ['Astro', 'Next.js', 'Three.js', 'OpenAI']
  },
  {
    id: 'lead',
    title: 'Lead Frontend Engineer @ Flux Labs',
    role: 'Full-time',
    period: '2019 - 2022',
    description:
      'Led the interface platform for an analytics product serving millions of telemetry points per minute. Built a component library, instituted performance budgets, and mentored a team of 5.',
    technologies: ['React', 'TypeScript', 'GraphQL', 'WebGL']
  },
  {
    id: 'early',
    title: 'Creative Technologist @ Spin Assembly',
    role: 'Studio',
    period: '2016 - 2019',
    description:
      'Rapid prototyping for installations and product pitches. Experimented with motion sensors, 3D sound, and custom GLSL shaders to craft memorable launch moments.',
    technologies: ['Svelte', 'Unity', 'TouchDesigner']
  }
];
---

<BaseLayout title="Portful | About the Engineer">
  <section class="border-b border-[color:var(--line-1)] bg-[color:var(--bg-1)] pb-24 pt-24 sm:pb-32 sm:pt-32">
    <div class="mx-auto grid max-w-[1280px] gap-16 px-6 sm:px-12 lg:grid-cols-[1.1fr,0.9fr] lg:px-16">
      <div class="space-y-8">
        <SectionHeader
          eyebrow="About"
          title="Builder, physicist at heart, product partner in practice"
          description="Rooted in systems thinking, I orchestrate immersive experiences that feel tactile without compromising accessibility or performance."
        />
        <div class="space-y-6 text-sm leading-relaxed text-[color:var(--text-2)]">
          <p>
            I love designing interactions that respond with intention. Whether it's steering a WebGL arena, animating a data dashboard, or crafting the quiet satisfaction of a good form submission,
            my focus is on experiences that communicate state through motion.
          </p>
          <p>
            Past work spans R&D prototypes, production SaaS, and open-source tooling. I thrive where design, engineering, and storytelling overlap - translating ideas into launches that resonate with users.
          </p>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="rounded-2xl border border-[color:var(--line-1)] bg-[color:rgba(12,16,22,0.58)] p-5 shadow-ambient">
            <p class="text-xs uppercase tracking-[0.3em] text-[color:var(--text-3)]">Specialties</p>
            <ul class="mt-3 space-y-2 text-sm text-[color:var(--text-1)]">
              <li>- Real-time web visualizations</li>
              <li>- Design systems & developer experience</li>
              <li>- Performance audits & observability</li>
            </ul>
          </div>
          <div class="rounded-2xl border border-[color:var(--line-1)] bg-[color:rgba(12,16,22,0.58)] p-5 shadow-ambient">
            <p class="text-xs uppercase tracking-[0.3em] text-[color:var(--text-3)]">Playground</p>
            <ul class="mt-3 space-y-2 text-sm text-[color:var(--text-1)]">
              <li>- Procedural shaders</li>
              <li>- Physics-inspired UI</li>
              <li>- Generative art collaborations</li>
            </ul>
          </div>
        </div>
      </div>
      <aside class="space-y-10">
        <div class="rounded-[24px] border border-[color:var(--line-1)] bg-[color:rgba(74,4,4,0.82)] p-6 shadow-ambient">
          <h3 class="font-display text-xl text-[color:var(--text-1)]">Arena Stats</h3>
          <dl class="mt-6 grid grid-cols-2 gap-6 text-sm text-[color:var(--text-2)]">
            <div>
              <dt class="text-xs uppercase tracking-[0.3em] text-[color:var(--text-3)]">Experience</dt>
              <dd class="mt-1 font-mono text-2xl font-semibold text-[color:var(--pri-300)]">7+ yrs</dd>
            </div>
            <div>
              <dt class="text-xs uppercase tracking-[0.3em] text-[color:var(--text-3)]">Launches</dt>
              <dd class="mt-1 font-mono text-2xl font-semibold text-[color:var(--sec-400)]">28</dd>
            </div>
            <div>
              <dt class="text-xs uppercase tracking-[0.3em] text-[color:var(--text-3)]">Focus</dt>
              <dd class="mt-1 font-mono text-base uppercase tracking-[0.3em] text-[color:var(--text-1)]">Web / XR</dd>
            </div>
            <div>
              <dt class="text-xs uppercase tracking-[0.3em] text-[color:var(--text-3)]">Location</dt>
              <dd class="mt-1 font-mono text-base uppercase tracking-[0.3em] text-[color:var(--text-1)]">Remote</dd>
            </div>
          </dl>
        </div>
        <CareerTimeline events={timeline} client:visible />
      </aside>
    </div>
  </section>
</BaseLayout>

