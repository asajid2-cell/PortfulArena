---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import { ContactForm } from '../components/contact/ContactForm.tsx';
---

<BaseLayout title="Portful | Contact">
  <section class="border-b border-[color:var(--line-1)] bg-[color:var(--bg-1)] pb-24 pt-24 sm:pb-32 sm:pt-32">
    <div class="mx-auto max-w-[720px] px-6 sm:px-12 lg:px-0">
      <SectionHeader
        eyebrow="Contact"
        title="Start a conversation"
        description="Open to product engineering, prototyping, and thoughtful interface work. Drop a note and I will reply with next steps, not a sales drip."
      />
      <div class="mt-12">
        <ContactForm client:visible />
      </div>
    </div>
  </section>
</BaseLayout>




