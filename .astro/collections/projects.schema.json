{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 3,
          "errorMessage": {
            "minLength": "Title is required"
          }
        },
        "summary": {
          "type": "string",
          "minLength": 10
        },
        "problem": {
          "type": "string"
        },
        "insight": {
          "type": "string"
        },
        "approach": {
          "type": "string"
        },
        "outcome": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "default": "Case Study"
        },
        "stack": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "label",
              "value"
            ],
            "additionalProperties": false
          }
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "href": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "label",
              "href"
            ],
            "additionalProperties": false
          }
        },
        "heroImage": {
          "type": "string"
        },
        "heroVideo": {
          "type": "string"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "order": {
          "type": "number",
          "default": 99
        },
        "publishedAt": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "summary"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}